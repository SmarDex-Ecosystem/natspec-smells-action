{
	"name": "natspec-smells-action",
	"description": "Report natspec-smells findings as a PR comment",
	"version": "2.0.0",
	"author": "RA2 Tech",
	"private": true,
	"homepage": "https://github.com/SmarDex-Ecosystem/natspec-smells-action",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SmarDex-Ecosystem/natspec-smells-action"
	},
	"bugs": {
		"url": "https://github.com/SmarDex-Ecosystem/natspec-smells-action/issues"
	},
	"keywords": [
		"actions",
		"node",
		"solidity",
		"natspec",
		"natspec-smells"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"bundle": "npm run format && npm run package",
		"format": "npx @biomejs/biome format --write .",
		"lint": "npx @biomejs/biome check .",
		"package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
		"package:watch": "npm run package -- --watch",
		"all": "npm run format && npm run lint && npm run test && npm run coverage && npm run package"
	},
	"license": "MIT",
	"jest": {
		"preset": "ts-jest",
		"verbose": true,
		"clearMocks": true,
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"testMatch": [
			"**/*.test.ts"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"coverageReporters": [
			"json-summary",
			"text",
			"lcov"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**"
		]
	},
	"dependencies": {
		"@actions/artifact": "^2.2.1",
		"@actions/core": "^1.10.1",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^6.0.0",
		"@actions/glob": "^0.5.0",
		"@actions/io": "^1.1.3",
		"@octokit/rest": "^21.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^20.14.2",
		"@vercel/ncc": "^0.38.3",
		"typescript": "^5.7.2"
	}
}
